<div class="justify-center self-center mx-[700px]">
    <a href="#" class="block w-[400px] p-20 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700 text-xl">

        <form class="flex flex-col justify-around items-center gap-10" id="transactionForm" action="/new" method="POST">
           
            <div class="mr-4">
                <label for="transactionType" class="text-2xl text-gray-300 ">Transaction Type</label>
                <select class="px-10 mt-3 mr-20 py-1 rounded-md text-gray-500" id="transactionType" name="transactionType" required>
                    <option value="Credit">Credit</option>
                    <option value="Debit" selected>Debit</option>
                </select>
            </div>
            <div class="mr-4 ml-16">
                <label for="title" class="text-2xl text-gray-300 ">Select Category</label>
                <select class="px-10 mt-3 mr-20 py-1 rounded-md text-gray-500" id="category" name="category" required>
                    <option value="Travel">Travel</option>
                    <option value="Food">Food</option>
                    <option value="Medical">Medical</option>
                    <option value="Shoping">Shoping</option>
                    <option value="Rent">Rent</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                </select>
            </div>
            <div class="form-group">
                <label class="text-2xl text-gray-300" for="title">Title</label>
                <input class="mt-3 py-2 px-4 rounded-md" type="text" id="title" name="title" placeholder="Enter Title" >
            </div>
            <div class="form-group">
                <label class="text-2xl text-gray-300" for="amount">Amount</label>
                <input class="mt-3 py-2 px-4 rounded-md" type="number" id="amount" name="amount" placeholder="Enter amount" required>
            </div>
            <button class="text-xl bg-white px-3 py-1 rounded-xl text-gray-400 mb-3" type="submit">Submit</button>
         
        </form>
